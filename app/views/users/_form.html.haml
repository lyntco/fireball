= form_for @user do |f|
  = f.label :username
  = f.text_field :username

  = f.label :email
  = f.email_field :email

  = f.label :password
  = f.password_field :password

  = f.label :password_confirmation
  = f.password_field :password_confirmation

  = f.label :avatar
  = f.text_field :avatar

  = f.label :native_language
  = f.text_field :native_language

  = f.submit
